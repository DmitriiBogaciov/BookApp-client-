{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/verify/page.tsx", "src/app/components/NavBar/TokenModal.jsx", "src/app/components/NavBar/NavBarMobile.jsx", "src/app/components/NavBar/NavBarDesktop.jsx", "src/app/components/NavBar/menuButton.jsx", "src/app/components/NavBar/MainNavBar.jsx", "src/app/components/NavBar/LogInButton.jsx", "src/app/layout.tsx", "src/config.ts", "next.config.js", "src/app/[locale]/studio/book/[bookId]/page/[pageId]/components/menu-editor-draft/autocomplete.jsx"],
  "exclude": ["node_modules"]
}
